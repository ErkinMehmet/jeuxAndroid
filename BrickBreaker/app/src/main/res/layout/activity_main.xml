<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E1F5FE"
    android:gravity="start"
    android:padding="0dp">
    <ImageView
        android:id="@+id/ivTitleImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lys_logo"
    android:layout_gravity="start|top"
    android:layout_marginTop="100dp"
    android:layout_marginStart="10dp"/>
    <!-- Start Game Button -->
    <TextView
        android:id="@+id/tvStartGame"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Start Game            "
        android:textColor="#FFFFFF"
        android:background="@drawable/arrow_button_start"
        android:padding="0dp"
        android:gravity="end|center_vertical"
        android:layout_gravity="top"
        android:layout_margin="0dp"
        android:elevation="0dp"
    android:clipToOutline="false"
    android:outlineProvider="none"
    android:theme="@android:style/Theme.DeviceDefault"
        android:onClick="startGame"/>

    <TextView
        android:id="@+id/btnLoadGame"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Load Game            "
        android:textColor="#FFFFFF"
        android:background="@drawable/arrow_button_load"
        android:padding="0dp"
        android:gravity="end|center_vertical"
        android:layout_gravity="top"
        android:layout_margin="0dp"
        android:elevation="0dp"
        android:clipToOutline="false"
        android:outlineProvider="none"
        android:onClick="loadButtonClick"
        android:theme="@android:style/Theme.DeviceDefault"/>
    <TextView
        android:id="@+id/btnResumeGame"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Resume Game            "
        android:textColor="#FFFFFF"
        android:background="@drawable/arrow_button_resume"
        android:padding="0dp"
        android:gravity="end|center_vertical"
        android:layout_gravity="top"
        android:layout_margin="0dp"
        android:elevation="0dp"
        android:clipToOutline="false"
        android:outlineProvider="none"
        android:theme="@android:style/Theme.DeviceDefault"
        android:onClick="returnToGame"/>
    <TextView
        android:id="@+id/btnRecords"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="            Records"
        android:textColor="#FFFFFF"
        android:background="@drawable/arrow_button_records"
        android:padding="0dp"
        android:gravity="start|center_vertical"
        android:layout_gravity="end"
        android:layout_margin="0dp"
        android:elevation="0dp"
        android:clipToOutline="false"
        android:outlineProvider="none"
        android:theme="@android:style/Theme.DeviceDefault"
        android:onClick="viewRecords"/>

    <TextView
        android:id="@+id/btnQuitGame"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="            Quit Game"
        android:textColor="#FFFFFF"
        android:background="@drawable/arrow_button_exit"
        android:padding="0dp"
        android:gravity="start|center_vertical"
        android:layout_gravity="end"
        android:layout_margin="0dp"
        android:elevation="0dp"
        android:clipToOutline="false"
        android:outlineProvider="none"
        android:theme="@android:style/Theme.DeviceDefault"
        android:onClick="quitGame"/>

</LinearLayout>
