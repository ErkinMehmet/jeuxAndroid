<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <!--  Gradient Bg for listrow -->
            <gradient
                android:startColor="#7ED1F9"
                android:centerColor="#3DA9E4"
                android:endColor="#01579B"
                android:angle="0" />
        </shape> </item>

    <!-- Arrowhead Vector (right side) -->
    <item android:gravity="right|center_vertical">
        <vector xmlns:android="http://schemas.android.com/apk/res/android"
            android:width="50dp"
            android:height="50dp"
            android:viewportWidth="50"
            android:viewportHeight="50">
            <!-- Arrowhead Triangle -->
            <path
                android:fillColor="#E1F5FE"
                android:pathData="M35,0 L50,0 L50,25 Z" />
        </vector>
    </item>
    <item android:gravity="right|center_vertical">
        <vector xmlns:android="http://schemas.android.com/apk/res/android"
            android:width="50dp"
            android:height="50dp"
            android:viewportWidth="50"
            android:viewportHeight="50">
            <!-- Arrowhead Triangle -->
            <path
                android:fillColor="#E1F5FE"
                android:pathData="M15,50 L50,50 L50,25 Z" />
        </vector>
    </item>
</layer-list>